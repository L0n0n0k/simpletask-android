{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "gradlew",
    "args": [],
    "tasks": [
        {
            "label": "clean",
            "type": "shell",
            "command": "gradlew",
            "args": [
                "clean",
                "clean",
                "assembleEncryptedDebug"
            ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": {
                    "regexp": "^([a-z]): ([A-Z]:[^:]+): \\((\\d+), (\\d+)\\): (.*)$",
                    "file": 2,
                    "line": 3,
                    "column": 4,
                    "severity": 1,
                    "message": 5
                }
            },
            "group": {
                "_id": "build",
                "isDefault": false
            }
        }
    ]
}